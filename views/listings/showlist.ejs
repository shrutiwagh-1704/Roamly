<% layout('layouts/boilerplate') -%>
<body>
    
    <div class="row">
        <div class="col-8 offset-3">
            <h3><%=listing_details.title %></h3>
        </div>
        
        <div class="card col-6 offset-3 listing-cards">
            <img class="card-img-top" src="<%=listing_details.image.url%>" alt="Card image cap">
            <div class="card-body">
                <p class="card-text"><i><%=listing_details.owner.username %></i></p>
                <p class="card-text">
                    <%=listing_details.description %><br>
                    &#8377;<%=listing_details.price.toLocaleString("en-IN") %>/night<br>
                    <%=listing_details.location %><br>
                    
                    <%=listing_details.country %>

                </p>

                <%if(currentuser && !currentuser._id.equals(listing_details.owner._id))
                {%>
                    <%if(existingBooking){%>
                        <button  class="btn btn-primary" disabled>Already Booked</button>
                    <%}else{%>
                        <div class="btns">
                            <a href="/listing/booking/<%=listing_details._id %>" class="btn btn-primary">Book</a>
                        </div>
                    <%}%>

                <%}%>

                <%if(currentuser && currentuser._id.equals(listing_details.owner._id))
                {%>
                    <div class="btns">
                        <a href="/listing/editlisting/<%=listing_details._id %>" class="btn btn-primary">Edit</a>

                        <form method="post" action="/listing/delete/<%=listing_details._id %>?_method=DELETE">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>

                    </div>
                <%}%>
                
            </div>
        </div>
       
    </div>


    <div class=" col-6 offset-3">
        
        <%if(currentuser) {%>
            <hr>
            <h3>Add Review here..</h3>
            <form action="/review/addreview/<%=listing_details._id %>" method="post" class="needs-validation" novalidate>
                <!-- <div class="mb-3 mt-3">
                    <label for="range" class="form-label">Range</label>
                    <input type="range" id="range" min="1" max="5" class="form-range" name="review[rating]">
                </div> -->

                <div class="mb-3 mt-3">
                    <legend>First rating:</legend>
                    <fieldset class="starability-basic">
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Write comment:</label>
                    <textarea id="comment" cols="10" rows="3" class="form-control" name="review[comment]" required></textarea>
                    <div class="invalid-feedback">
                        Please add comment 
                    </div>
                </div>
                <button class="btn btn-dark">submit</button>
            </form>
        <%}%>
    </div>

    <div class="col-6 offset-3">
        <hr>
        <div class="row">
            <h3><%= listing_details.review.length > 0 ? "All Reviews" : "No Reviews Yet" %></h3>
            <% for(let list of listing_details.review)
            { %>
            <div class="card mb-3 col-5 ms-2">
                <div class="card-body">
                    <%console.log("list"+list+"currentuser"+currentuser)%>
                  
                    <h5 class="card-title"><%=list.author.username%></h5>
                    <p class="card-text"><%=list.comment %></p>
                    <p class="card-text"><%=list.rating %>star</p>
                    <p class="starability-result card-text" data-rating="<%=list.rating %>"></p>
                    
                    <%if(currentuser && currentuser._id.equals(list.author._id))
                    {%>

                  
                        <form method="post" action="/review/listing/<%=listing_details._id%>/review/<%=list._id%>?_method=DELETE" >
                            <button class="btn btn-danger mb-3">Delete</button>
                        </form>
                    <%}%>
                </div>
            </div>
            <%}%>
        </div>
    </div>
</body>          
     